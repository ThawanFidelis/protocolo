!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "Protocolo"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    = stylesheet_link_tag "application", :media => "all"
    %link(href="images/apple-touch-icon-144x144.png" rel="apple-touch-icon-precomposed" sizes="144x144")
    %link(href="images/apple-touch-icon-114x114.png" rel="apple-touch-icon-precomposed" sizes="114x114")
    %link(href="images/apple-touch-icon-72x72.png" rel="apple-touch-icon-precomposed" sizes="72x72")
    %link(href="images/apple-touch-icon.png" rel="apple-touch-icon-precomposed")
    %link(href="images/favicon.ico" rel="shortcut icon")


  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand(href= root_path) Protocolo
          .container.nav-collapse
            %ul.nav
              - if user_signed_in? && current_user.admin?
                %li.dropdown
                  %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                    Processo
                    %b.caret
                  %ul.dropdown-menu
                    %li
                      %a{:href => new_processo_path} Novo
                    %li
                      %a{:href => consultar_processos_path} Consultar
                    %li
                      %a{:href => encerrar_processos_path} Encerrar
                    %li
                      %a{:href => receber_processos_path} Receber
                    %li
                      %a{:href => reabrir_processos_path} Reabrir
                %li.dropdown
                  %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                    Setor
                    %b.caret
                  %ul.dropdown-menu
                    %li
                      %a{:href => new_setor_path} Novo
                %li.dropdown
                  %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                    Solicitante
                    %b.caret
                  %ul.dropdown-menu
                    %li
                      %a{:href => new_solicitante_path} Novo
                %li.dropdown
                  %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                    Tramitações
                    %b.caret
                  %ul.dropdown-menu
                    %li
                      %a{:href => new_tramitacao_path} Novo
                %li.dropdown
                  %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                    Administrador
                    %b.caret
                  %ul.dropdown-menu
                    %li
                      %a{:href => new_user_path} Novo

            %ul.nav.pull-right
              - if user_signed_in? 
                %li.dropdown
                  %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                    = current_user.email
                    %b.caret
                  %ul.dropdown-menu
                    %li= link_to "Editar", edit_user_registration_path
                    %li= link_to "Logout", destroy_user_session_path
              - else
                %li= link_to('Login', new_user_session_path)

    .container

      .content
        .row
          .span9
            = bootstrap_flash
            = yield
      %footer
        %p &copy; Company 2012
    /
      Javascripts
      \==================================================
    / Placed at the end of the document so the pages load faster
    = javascript_include_tag "application"

